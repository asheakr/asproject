<launch>
    <!-- Node to convert depth image to point cloud -->
    <node pkg="depth_image_proc" type="point_cloud_xyzrgb" name="depth_to_pointcloud" output="screen">
        <remap from="image_rect" to="/realsense/depth/image"/>
        <remap from="camera_info" to="/realsense/depth/camera_info"/>
        <remap from="points" to="/realsense/depth/points"/>
    </node>
</launch>
